{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,    // <-- enable decorators
    "emitDecoratorMetadata": true,     // <-- needed for class-validator
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
